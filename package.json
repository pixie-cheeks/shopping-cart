{
  "name": "shopping-cart",
  "description": "A project to create a digital shopping cart",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=21.0.0"
  },
  "dependencies": {
    "prop-types": "^15.8.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.5.1"
  },
  "devDependencies": {
    "@awmottaz/prettier-plugin-void-html": "^1.8.0",
    "@pixie-cheeks/eslint-config": "^10.1.0",
    "@pixie-cheeks/stylelint-config": "^3.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/eslint-plugin": "^1.1.43",
    "eslint": "^9.25.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-testing-library": "^7.1.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.1",
    "postcss-preset-env": "^10.1.6",
    "prettier": "^3.5.3",
    "stylelint": "^16.18.0",
    "vite": "^6.3.2",
    "vitest": "^3.1.1"
  },
  "prettier": {
    "singleQuote": true,
    "plugins": [
      "@awmottaz/prettier-plugin-void-html"
    ]
  },
  "stylelint": {
    "extends": [
      "@pixie-cheeks/stylelint-config",
      "@pixie-cheeks/stylelint-config/bem"
    ],
    "ignoreFiles": [
      "**/*",
      "!src/**/*.css"
    ],
    "overrides": [
      {
        "files": [
          "**/*.module.css"
        ],
        "extends": [
          "@pixie-cheeks/stylelint-config/css-modules"
        ]
      }
    ]
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{js,cjs,jsx}": [
      "eslint --max-warnings 0",
      "vitest related --run"
    ],
    "*.css": [
      "stylelint"
    ]
  }
}
