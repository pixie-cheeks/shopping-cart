{
  "name": "shopping-cart",
  "description": "A project to create a digital shopping cart",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=21.0.0"
  },
  "dependencies": {
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.0.2"
  },
  "devDependencies": {
    "@awmottaz/prettier-plugin-void-html": "^1.7.0",
    "@pixie-cheeks/eslint-config": "^9.0.0",
    "@pixie-cheeks/stylelint-config": "^2.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/eslint-plugin": "^1.1.14",
    "eslint": "^9.16.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-plugin-testing-library": "^7.0.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "postcss-preset-env": "^10.1.1",
    "prettier": "^3.4.2",
    "stylelint": "^16.11.0",
    "vite": "^6.0.2",
    "vitest": "^2.1.8"
  },
  "prettier": {
    "singleQuote": true,
    "plugins": [
      "@awmottaz/prettier-plugin-void-html"
    ]
  },
  "stylelint": {
    "extends": [
      "@pixie-cheeks/stylelint-config",
      "@pixie-cheeks/stylelint-config/bem"
    ],
    "ignoreFiles": [
      "**/*",
      "!src/**/*.css"
    ],
    "overrides": [
      {
        "files": [
          "**/*.module.css"
        ],
        "extends": [
          "@pixie-cheeks/stylelint-config/css-modules"
        ]
      }
    ]
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{js,cjs,jsx}": [
      "eslint --max-warnings 0",
      "vitest related --run"
    ],
    "*.css": [
      "stylelint"
    ]
  }
}
